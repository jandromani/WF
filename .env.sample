# Secrets generated locally (do not commit real values)
AUTH_SECRET="" # Added by `npx auth secret`. Read more: https://cli.authjs.dev
NEXTAUTH_SECRET="" # NextAuth signing/encryption secret
HMAC_SECRET_KEY="" # Run `openssl rand -base64 32` to generate an HMAC key

# Authentication URLs
AUTH_URL="" # Public URL of your NextAuth instance (e.g. ngrok tunnel)
NEXTAUTH_URL="http://localhost:3000" # Base URL used by NextAuth callbacks

# World App / World ID configuration
NEXT_PUBLIC_APP_NAME="World Fans" # Display name shown inside the mini app
NEXT_PUBLIC_APP_ID="app_1234567890" # App ID from the Worldcoin Developer Portal
NEXT_PUBLIC_ACTION_ID="action_1234567890" # Action ID configured for World ID verification
WORLDID_API_URL="https://developer.worldcoin.org" # Base URL for World ID Cloud API requests
WORLDID_API_KEY="sk_test_abc123" # API key for World ID Cloud verification

# World Chain network configuration
NEXT_PUBLIC_WORLDCHAIN_CHAIN_ID="480" # Target World Chain network chain ID
NEXT_PUBLIC_RPC="https://worldchain-sepolia.g.alchemy.com/v2/demo" # HTTPS RPC endpoint for World Chain
NEXT_PUBLIC_WORLDCHAIN_RPC="https://worldchain-sepolia.g.alchemy.com/v2/demo" # Tokenomics RPC override (optional)

# Contract addresses
NEXT_PUBLIC_WLDY_ADDRESS="0x0000000000000000000000000000000000000000" # WFANS token contract address
NEXT_PUBLIC_PAY_ADDRESS="0x0000000000000000000000000000000000000000" # Pay module contract address
NEXT_PUBLIC_TREASURY_ADDRESS="0x0000000000000000000000000000000000000000" # Treasury contract address
NEXT_PUBLIC_TOKEN_ADDRESS="0x0000000000000000000000000000000000000000" # Token contract for supply widget
NEXT_PUBLIC_EPOCH_CONTROLLER="0x0000000000000000000000000000000000000000" # Epoch controller contract address

# App behaviour flags
NEXT_PUBLIC_APP_ENV="development" # Controls runtime toggles (set to "production" in prod)

# Internal APIs
NOTIFICATIONS_API_KEY="demo-notifications-key" # Shared secret for /api/notifications/send
